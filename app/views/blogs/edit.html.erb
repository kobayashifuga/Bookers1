<main>
<h1>Editing Book</h1>


<%= form_for(@blog) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_field :body %>
    <br>
    <%= f.submit "Upload Book" %></br>
    <%= link_to "Show | ", blog_path(@blog) %>
    <%= link_to "Back", blogs_path %>
<% end %>
